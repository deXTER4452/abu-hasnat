{
  "name": "abu",
  "scripts": {
    "build:css": "cleancss src/css/*.css -o dist/css/styles.css",
    "build:js": "mkdirp dist/js && uglifyjs src/js/*.js -o dist/js/app.js",
    "copy:html": "cp src/*.html dist",
    "imagemin": "imagemin src/images/* -o dist/images",
    "build:all": "npm run build:css && npm run build:js && npm run copy:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deXTER4452/abu-hasnat.git"
  },
  "author": "Abu Hasnat",
  "devDependencies": {
    "clean-css-cli": "^5.5.2",
    "imagemin-cli": "^7.0.0",
    "mkdirp": "^1.0.4",
    "uglify-js": "^3.15.2"
  }
}
